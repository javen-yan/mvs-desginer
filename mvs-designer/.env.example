# MVS Designer 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# Flask配置
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# 服务配置
HOST=0.0.0.0
PORT=5000

# Meshroom配置
MESHROOM_PATH=/opt/meshroom/meshroom_batch
MESHROOM_TIMEOUT=3600
USE_GPU=true
CUDA_VISIBLE_DEVICES=0

# 文件配置
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/mvs-designer.log

# 清理配置
CLEANUP_DAYS=7  # 自动清理N天前的文件